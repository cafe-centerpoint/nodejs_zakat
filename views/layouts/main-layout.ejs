      /* Jumbotron */
      .jumbotron {
          background: url(/images/pexels-chan-walrus-958545.jpg);
          background-size: cover;
          height: 540px;
          position: relative;
          z-index: -1;
      }

      .jumbotron::after {
          content: '';
          display: block;
          position: absolute;
          width: 100%;
          height: 50%;
          background-image: linear-gradient(to top, rgba(0,0,0,1), rgba(0,0,0,0));
          bottom: 0;
      }

      .jumbotron .container {
          color: white;
          text-align: center;
          position: relative;
          z-index: 1;
      }

      .jumbotron .display-4 {
          font-weight: 200;
          font-size: 1.6em;
          margin-top: 100px;
          text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);
          margin-bottom: 50px;
          background-color: rgba(74, 85, 95, 0.637);
          padding: 23px 25px;
          border-radius: 40px;
      }

      .jumbotron .display-4 span {
          font-weight: 500;
      }

      /* Utility */
      .tombol {
          border-radius: 40px;
          font-size: small;
      }

      /* others */
      .paket, .chat {
        font-size: medium;
      }

      .paket span {
        color: gray;
      }


      .chat a button {
        background-color: green;
        color: honeydew;
        border: none;
        padding: 7px 13px;
        border-radius: 10px;
      }

      footer {
        background-color: rgba(0, 0, 0, 0.671);
        color: snow;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 25px;
      }

      footer h3 {
        font-size: large;
        font-weight: bold;
      }

      footer p {
        text-align: center;
        font-size: small;
      }

      /* RESPONSIVE */
      @media (min-width: 992px) {
          .navbar {
              padding-top: 20px;
          }
          
          .navbar-brand {
              color: navy !important;
              background-color: rgba(197, 207, 152, 0.52);
              padding: 2px 15px;
              text-shadow: 3px 1px 2px rgba(0, 0, 128, 0.246);
          }

          .nav-link {
              text-transform: uppercase;
              margin-right: 20px;
              font-size: 18px !important;
              background-color: rgba(0, 0, 0, 0.5);
              color: white !important;
          }

          .nav-link:hover::after,
          .nav-link.active::after {
              content: '';
              display: block;
              border-bottom: 3px solid white;
              margin: auto;
              margin-bottom: -8px;
              width: 50%;
              padding-top: 2.5px;
          }

          .kupon {
            position: relative;
            background-color: black;
            color: white;
            border: skyblue;
            font-size: small;
          }

          .kupon:hover {
            color: white !important;
          }

          /* .voucher {
            background: url(images/Waroeng.jpg);
