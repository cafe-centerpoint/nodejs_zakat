    <style>
      /* Navbar */
      .navbar-brand {
          font: 32px Viga;
      }

      .navbar ul li a {
        text-decoration: none;
      }


      /* Jumbotron */
      .jumbotron {
          background: url(/images/larm-rmah-AEaTUnvneik-unsplash.jpg);
          /* Photo by <a href="https://unsplash.com/@larm?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText">Larm Rmah</a> on <a href="https://unsplash.com/s/photos/charity?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText">Unsplash</a> */
          background-size: cover;
          height: auto;
          position: relative;
          z-index: -1;
          margin-bottom: 0;
      }

      .jumbotron::after {
          content: '';
          display: block;
          position: absolute;
          width: 100%;
          height: 50%;
          background-image: linear-gradient(to top, rgba(0,0,0,1), rgba(0,0,0,0));
          bottom: 0;
      }

      .jumbotron .container {
          color: white;
          text-align: center;
          position: relative;
          z-index: 1;
      }

      .jumbotron .display-4 {
          font-weight: 200;
          font-size: 1.6em;
          margin-top: 100px;
          text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);
          margin-bottom: 50px;
          background-color: rgba(74, 85, 95, 0.637);
          padding: 23px 25px;
          border-radius: 40px;
      }

      .jumbotron .display-4 span {
          font-weight: 500;
      }

      /* Utility */
      .tombol {
          border-radius: 40px;
          font-size: small;
      }

      .chat a button {
        background-color: green;
        color: honeydew;
        border: none;
        padding: 7px 13px;
        border-radius: 10px;
      }

      footer {
        background-color: rgba(0, 0, 0, 0.671);
        color: snow;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 25px;
      }

      footer h3 {
        font-size: large;
        font-weight: bold;
      }

      footer p {
        text-align: center;
        font-size: small;
      }

      /* RESPONSIVE */
      @media (min-width: 992px) {
          .navbar {
              padding-top: 20px;
          }
          
          .navbar-brand {
              color: white !important;
              background-color: rgba(197, 207, 152, 0.52);
              padding: 2px 15px;
              text-shadow: 3px 1px 2px rgba(0, 0, 128, 0.246);
          }

          .nav-link {
              text-transform: capitalize;
              margin-right: 20px;
              font-size: 18px !important;
              background-color: rgba(0, 0, 0, 0.5);
              color: white !important;
              text-decoration: none;
          }

          .navbar ul li a {
            text-decoration: none;
          }

          .nav-link:hover::after,
          .nav-link.active::after {
              content: '';
              display: block;
              border-bottom: 3px solid white;
              margin: auto;
              margin-bottom: -8px;
              width: 50%;
              padding-top: 2.5px;
          }
          
         
          .jumbotron {
              color: white;
              margin-top: -90px;
              height: 640px;
          }

          .jumbotron .display-4 {
              font-size: 2.5em;
              margin-top: 150px;
          }

          .jumbotron a {
            cursor: pointer;
          }

          .tombol {
            font-size: xx-large;
          }


          footer {
            background-color: black;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 25px
          }

          footer span {
            line-height: 1px;
          }

          footer h6 {
            color: lightgray;
          }

      }

    </style>
